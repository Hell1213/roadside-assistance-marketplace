PORT=3001
NODE_ENV=development

# Postgres (local via docker-compose.yml at repo root)
DATABASE_URL=postgresql://ras:ras@localhost:5433/ras?schema=public

# Redis (local via docker-compose.yml at repo root)
REDIS_URL=redis://localhost:6380

# Auth
JWT_ACCESS_SECRET=dev_access_secret_change_me
JWT_REFRESH_SECRET=dev_refresh_secret_change_me

# Razorpay (will be provided later)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx

# Commission (platform fee percentage)
PLATFORM_COMMISSION_PCT=15

# Firebase Cloud Messaging (FCM) - for push notifications
FCM_SERVICE_ACCOUNT_KEY_PATH=./fcm-service-account.json
# OR
FCM_PROJECT_ID=
FCM_PRIVATE_KEY=
FCM_CLIENT_EMAIL=

# SMS Provider (MSG91 or AWS SNS)
SMS_PROVIDER=msg91
MSG91_AUTH_KEY=
MSG91_SENDER_ID=RASAPP
# OR for AWS SNS
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SNS_SENDER_ID=RASAPP

# CORS (comma-separated origins, or * for all)
ALLOWED_ORIGINS=*

# Rate Limiting (requests per minute)
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

